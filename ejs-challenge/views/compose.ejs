<%- include("partials/header"); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="postEntry">Post</label>
        <textarea class="form-control" name="postBody" rows="8" cols="80" placeholder="Enter post"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publishButton">Publish</button>
</form>

<%- include("partials/footer"); -%>
